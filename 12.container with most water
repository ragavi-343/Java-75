class Solution {
    public int maxArea(int[] height) {
        int n=height.length;
        int l=0,r=n-1;
        int maxi=0;
        while(l<r)
        {
             int width=r-l;
             int area=(Math.min(height[l],height[r]))*width;
             maxi=Math.max(maxi,area);
             if(height[l]>height[r])
             {
                r--;
             }
             else
             {
                l++;
             }
        }
        return maxi;
    }
}
