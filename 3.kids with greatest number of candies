class Solution {
    public List<Boolean> kidsWithCandies(int[] candies, int extraCandies) {
        int m=0;
        int n=candies.length;
        for(int i=0;i<n;i++)
            {
                if(candies[i]>m)
                {
                    m=candies[i];
                }
            }
        List<Boolean> res=new ArrayList<>();
        for(int i=0;i<n;i++)
            {
                if(candies[i]+extraCandies>=m)
                {
                    res.add(true);
                }
                else
                {
                    res.add(false);
                }
            }
        return res;
    }
}
