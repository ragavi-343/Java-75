class Solution {
    public int longestOnes(int[] nums, int k) {
        int maxlen=0,l=0,r=0,zc=0,n=nums.length;
          while(r<n)
        {
            if(nums[r]==0)
            {
                zc++;
            }
            while(zc>k)
            {
                if(nums[l]==0)
                {
                    zc--;
                }
                l++;
            }
            maxlen=Math.max(maxlen,r-l+1);
            r++;
        }
         return maxlen;
    }
}
